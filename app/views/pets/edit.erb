<h1>Update Pet</h1>

<form action="/pets/<%= @pet.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <p>
    <label for="pet_name">Pet Name: </label>
    <input type="text" id="pet_name" name="pet[name]" value="<%= @pet.name %>">
  </p>
  <h3>Existing Owners</h3>
  <% @owners.each do |owner| %>
    <input id="<%= owner.id %>" type="radio" name="pet[owner_id]"
      value="<%= owner.id %>" <%= 'checked' if @pet.owner.id == owner.id %>>
    <label for="<%= owner.id %>"><%= owner.name %></label><br>
  <% end %>
  <p>
  <label for="new_owner">New Owner: </label>
  <input id="owner_name" type="text" name="owner[name]">
  </p>
  <p><input type="submit" value="Update Pet"></p>
</form>
